<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/player1Highlighter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/horizontalMiddleOfScreen"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/player1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2.5dp"
            tools:ignore="MissingConstraints">

        </androidx.recyclerview.widget.RecyclerView>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/player2Highlighter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/horizontalMiddleOfScreen"
        app:layout_constraintVertical_bias="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/player2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2.5dp">

        </androidx.recyclerview.widget.RecyclerView>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/player3Highlighter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2.5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="2.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="@+id/horizontalMiddleOfScreen"
        app:layout_constraintVertical_bias="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/player3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2.5dp">

        </androidx.recyclerview.widget.RecyclerView>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/player4Highlighter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="@+id/horizontalMiddleOfScreen"
        app:layout_constraintVertical_bias="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/player4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2.5dp">

        </androidx.recyclerview.widget.RecyclerView>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/player5Highlighter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/horizontalMiddleOfScreen"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/player5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2.5dp" />
    </FrameLayout>

    <TextView
        android:id="@+id/namePlayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:fontFamily="@font/bungee_inline"
        android:text="Player1"
        android:textAlignment="center"
        android:textColor="?attr/InlineColor"
        android:textSize="@dimen/text_size"
        app:layout_constraintBottom_toBottomOf="@+id/player1Highlighter"
        app:layout_constraintEnd_toEndOf="@+id/player1Highlighter"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/player1Highlighter"
        app:layout_constraintTop_toTopOf="@+id/player1Highlighter"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/nameOutlinePlayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:fontFamily="@font/bungee_outline"
        android:text="Player1"
        android:textAlignment="center"
        android:textColor="?attr/OutlineColor"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/player1Highlighter"
        app:layout_constraintEnd_toEndOf="@+id/player1Highlighter"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/player1Highlighter"
        app:layout_constraintTop_toTopOf="@+id/player1Highlighter"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/namePlayer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee_inline"
        android:text="Player2"
        android:textAlignment="center"
        android:textColor="?attr/InlineColor"
        android:textSize="@dimen/text_size"
        app:layout_constraintBottom_toBottomOf="@+id/player2Highlighter"
        app:layout_constraintEnd_toEndOf="@+id/player2Highlighter"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/player2Highlighter"
        app:layout_constraintTop_toTopOf="@+id/player2Highlighter"
        app:layout_constraintVertical_bias="0.5" />


    <TextView
        android:id="@+id/nameOutlinePlayer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:fontFamily="@font/bungee_outline"
        android:text="Player2"
        android:textAlignment="center"
        android:textColor="?attr/OutlineColor"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/player2Highlighter"
        app:layout_constraintEnd_toEndOf="@+id/player2Highlighter"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/player2Highlighter"
        app:layout_constraintTop_toTopOf="@+id/player2Highlighter"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/namePlayer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee_inline"
        android:text="Player3"
        android:textAlignment="center"
        android:textColor="?attr/InlineColor"
        android:textSize="@dimen/text_size"
        app:layout_constraintBottom_toBottomOf="@+id/player3Highlighter"
        app:layout_constraintEnd_toEndOf="@+id/player3Highlighter"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/player3Highlighter"
        app:layout_constraintTop_toTopOf="@+id/player3Highlighter"
        app:layout_constraintVertical_bias="0.5" />


    <TextView
        android:id="@+id/nameOutlinePlayer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:fontFamily="@font/bungee_outline"
        android:text="Player3"
        android:textAlignment="center"
        android:textColor="?attr/OutlineColor"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/player3Highlighter"
        app:layout_constraintEnd_toEndOf="@+id/player3Highlighter"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/player3Highlighter"
        app:layout_constraintTop_toTopOf="@+id/player3Highlighter"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/namePlayer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee_inline"
        android:text="Player4"
        android:textAlignment="center"
        android:textColor="?attr/InlineColor"
        android:textSize="@dimen/text_size"
        app:layout_constraintBottom_toBottomOf="@+id/player4Highlighter"
        app:layout_constraintEnd_toEndOf="@+id/player4Highlighter"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/player4Highlighter"
        app:layout_constraintTop_toTopOf="@+id/player4Highlighter"
        app:layout_constraintVertical_bias="0.5" />


    <TextView
        android:id="@+id/nameOutlinePlayer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:fontFamily="@font/bungee_outline"
        android:text="Player4"
        android:textAlignment="center"
        android:textColor="?attr/OutlineColor"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/player4Highlighter"
        app:layout_constraintEnd_toEndOf="@+id/player4Highlighter"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/player4Highlighter"
        app:layout_constraintTop_toTopOf="@+id/player4Highlighter"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/namePlayer5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee_inline"
        android:text="Player5"
        android:textAlignment="center"
        android:textColor="?attr/InlineColor"
        android:textSize="@dimen/text_size"
        app:layout_constraintBottom_toBottomOf="@+id/player5Highlighter"
        app:layout_constraintEnd_toEndOf="@+id/player5Highlighter"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/player5Highlighter"
        app:layout_constraintTop_toTopOf="@+id/player5Highlighter"
        app:layout_constraintVertical_bias="0.5" />


    <TextView
        android:id="@+id/nameOutlinePlayer5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:fontFamily="@font/bungee_outline"
        android:text="Player5"
        android:textAlignment="center"
        android:textColor="?attr/OutlineColor"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/player5Highlighter"
        app:layout_constraintEnd_toEndOf="@+id/player5Highlighter"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/player5Highlighter"
        app:layout_constraintTop_toTopOf="@+id/player5Highlighter"
        app:layout_constraintVertical_bias="0.5" />

    <FrameLayout
        android:id="@+id/deckHighlighter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="2.5dp"
        app:layout_constraintBottom_toTopOf="@+id/horizontalMiddleOfScreen"
        app:layout_constraintDimensionRatio="2:3"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6">

        <ImageView
            android:id="@+id/deck"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2.5dp"
            android:src="@drawable/close_image_vert"
            tools:ignore="MissingConstraints" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/stir1Highlighter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/close_image_vert"
        app:layout_constraintBottom_toTopOf="@+id/cardDivider"
        app:layout_constraintDimensionRatio="2:3"
        app:layout_constraintEnd_toStartOf="@+id/stirSeparator"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/stir1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2.5dp"
            android:src="@drawable/close_image_vert" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/stir2Highlighter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/close_image_vert"
        app:layout_constraintBottom_toTopOf="@+id/cardDivider"
        app:layout_constraintDimensionRatio="2:3"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="@+id/stirSeparator"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/stir2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2.5dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/close_image_vert" />
    </FrameLayout>

    <ImageView
        android:id="@+id/hintCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toTopOf="@+id/horizontalMiddleOfScreen"
        app:layout_constraintDimensionRatio="2:3"
        app:layout_constraintEnd_toEndOf="@+id/stir2Highlighter"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/stir1Highlighter"
        app:layout_constraintTop_toTopOf="@+id/cardDivider"
        app:srcCompat="@drawable/close_image_vert" />

    <ImageButton
        android:id="@+id/NicknamesReveal"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="changeVisibilityPlayersNicknames"
        app:layout_constraintBottom_toTopOf="@+id/cardDivider"
        app:layout_constraintStart_toEndOf="@+id/player1Highlighter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/baseline_remove_red_eye_24"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/LeaveLobby"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="leaveLobby"
        app:layout_constraintBottom_toTopOf="@+id/cardDivider"
        app:layout_constraintEnd_toStartOf="@+id/player5Highlighter"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/baseline_exit_to_app_24"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/ChangeSound"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="turnSound"
        app:layout_constraintBottom_toTopOf="@+id/cardDivider"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/NicknamesReveal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/outline_volume_up_24"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalMiddleOfScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cardDivider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/stirSeparator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.555" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.66666" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.44334" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33333" />

    <TextView
        android:id="@+id/handeCardTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/handle_card_text"
        app:layout_constraintBottom_toBottomOf="@+id/hintCard"
        app:layout_constraintEnd_toEndOf="@+id/hintCard"
        app:layout_constraintStart_toStartOf="@+id/hintCard"
        app:layout_constraintTop_toTopOf="@+id/hintCard" />

</androidx.constraintlayout.widget.ConstraintLayout>